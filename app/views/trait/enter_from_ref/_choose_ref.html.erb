<%= form_tag(otu_compiler_trait_path(:assign => :ref_id), :method => :get, :remote => true, :id => 'assign_ref_form') do -%>

<div class="nfr" id='nfr'>
	<label for="trait_choose_ref">Reference:<span class="sublabel">Search by any combination of author, title, year, or journal.</span></label>
	<br>
	<span class="nfld"><%= render :partial => 'shared/picker', :locals => {
		:controller => 'refs',
		:object => 'obj',
		:method => 'id', # Use obj[:id] throughout for DRY reference in TraitController.otu_compiler
		:tag_id => "source_ref_id_for_otu",
		:size => 80 } -%></span>
	<p align="left">
		<br />
		or
    <span class="more">
      <a data-ajaxify='modal' close_button_class href="<%= new_ref_trait_path %>"> Enter New Reference </a>
    </span>
	</p>

  <%= submit_tag :assign -%> 
</div>

<% end %>

