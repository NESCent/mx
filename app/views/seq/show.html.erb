<% @show.collect{|s| render :partial => (s)} -%>

<div id="inner_wrapper">
  <div id="inner_container" <%= 'style="padding-right: 0;"' if @no_right_col %>>

    <div id="inner_center" class="column">    
      <%= yield :center -%> 
    </div>

    <div id="inner_left" class="column">
      <%= yield :left -%> 
      <%= render :partial =>("navigator") %> 
    </div>

    <div id="inner_right" class="column" <%= 'style="width: 0; margin-right: 0;"' if @no_right_col %>>
      <%= yield :right -%> 
    </div>   
  </div> 
</div>
