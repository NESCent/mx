<%= content_for :center do -%>
  <h3> sorting characters </h3>
  <p>  <%= link_to('reset character sorting', :action => :reset_chr_positions, :id => @mx) -%> <i>resets to alphabetical by character name</i> </p>
  <div>
    <p><i> Drag to sort.</i> </p>
    <table id="chrs"
      style="margin-left: 2em;"
      data-sortable
      data-sortable-items="tr"
      data-sortable-on-change-url="<%= url_for(:action=>'sort_chrs')%>">

      <% @chrs_mxes.each do |chrmx| -%>
        <%= content_tag_for :tr, chrmx do -%>
          <td class="handle"><%= render("shared/drag_handle")%></td>
          <td> <%= chrmx.chr.id -%> </td>
          <td>
            <%= link_to(chrmx.chr.display_name.html_safe, :action => :show, :id => chrmx.chr.id, :controller => :chrs) -%>
          </td>
        <% end %>
      <% end %>
    </table>
  </div>

<% end %>
