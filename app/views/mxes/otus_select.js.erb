<% if @otus.size > 0 -%>
  $("#otus_to_code").html("<%= escape_javascript( render(partial: 'otus/select_for_matrix', locals: {otus: @otus}) ) -%>");
  $("#otus_to_code").append('<br style="clear:both;" />');
  $('#code_with_button').attr('disabled', false);
<% else -%>
  $("#otus_to_code").html('<em style="color:red">Select a matrix, no OTUs found.</em>');
  $('#code_with_button').attr('disabled', true);

<% end -%>
