<% if @image_descriptions.size > 0 -%>
  $("#find_images_results").html("<%= escape_javascript( render(:partial => 'figures/id', :collection => @image_descriptions, :locals => {:object => @obj}) ) -%>");
  $("#find_images_results").append('<br style="clear:both;" />');
<% else -%>
  $("#find_images_results").html('<em style="color:red">Search complete, no results returned.</em>');
  $("#find_images_results").mx_effect('highlight'); /* not sure this is working */
<% end -%>
$("#find_images_results").mx_spinner('hide');
