<h3>Editing image</h3>
<%# don't need the image_tag gsub here, only for MB images that have a different edit form %>
<%= link_to(image_tag(@image.path_for), :action => 'show', :id => @image) %>
<%= form_tag({:action => 'update'},  {:multipart => true, :name => 'img_form', :method => "put"}) do -%>
  <%= render(:partial => 'form') %>
  <%= submit_tag('Edit') %>
<% end -%>
