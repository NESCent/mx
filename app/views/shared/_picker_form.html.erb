<%# a universal form for pickers -%>
<% controller = params[:controller].to_s -%>
<% object ||= controller -%>
<% form_controller ||= params[:controller] -%>
<% form_action ||= "show" -%>
<%= form_tag(:action => form_action, :controller => form_controller, :method => :get) do -%>
  <%= hidden_field_tag('cntrller', controller) -%>
  <%= render :partial => 'shared/picker', :locals => {
    :controller => controller,
    :object => object.html_safe,
    :method => 'id'.html_safe,
    :tag_id => "#{object}_to_find".html_safe,
    :display => "",
    :size => 60,
    :css_class => 'ajaxPickerSmall'.html_safe } -%>
  <%= submit_tag "show",  {'class' => 'small_form_button', :name => 'show'}  -%>
  <% if show_and_edit %>
    <%= submit_tag "edit",  {'class' => 'small_form_button', :name => 'edit'}  -%>
  <% end %>
<% end -%>
