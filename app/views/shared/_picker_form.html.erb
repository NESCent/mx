<%# a universal form for pickers -%>
<% controller = self.controller.controller_name -%>
<% object ||= controller -%>
<% form_controller ||= self.controller.controller_name -%> 
<% form_action ||= "show" -%>
<%= form_tag(:action => form_action, :controller => form_controller) do -%>
  <%= hidden_field_tag('cntrller', controller) -%>
  <%= render :partial => "shared/picker", :locals => {
    :controller => controller,
    :object => object,
    :method => 'id',
    :tag_id => "#{object}_to_find",
    :display => "",
    :size => 60,
    :css_class => 'ajaxPickerSmall' } -%>
  <%= submit_tag "show",  {'class' => 'small_form_button', :name => 'show'}  -%>
  <% if show_and_edit %>
    <%= submit_tag "edit",  {'class' => 'small_form_button', :name => 'edit'}  -%>
  <% end %>
<% end -%>
