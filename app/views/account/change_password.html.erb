<%= form_tag :action=> "change_password" do -%>

    <%= error_messages_for 'person' %><br />

    <p><label for="person_password">Current password:</label><br />
    <input type="password" name="person_password" id="person_password" size="30"/></p>

    <p><label for="person_password">E-mail</label><br />
    <%= text_field "person", "email", :size => 30 -%></p>

    <p><label for="person_password">New password:</label><br/>
    <%= password_field "person", "password", :size => 30, :value => "" %></p>

    <p><label for="person_password_confirmation">Confirm new password:</label><br />
    <%= password_field "person", "password_confirmation", :size => 30, :value => "" %></p>



    <p>
    <input type="submit" name="update" value="Update" class="primary" /></p>

<% end -%>