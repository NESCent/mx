<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="content-type" content="text/html;charset=utf-8" />
  <title>MX - labels </title>
  <meta http-equiv="content-type" content="text/html;charset=utf-8" />
  <link rel="Stylesheet" href="/stylesheets/class/ce.css" type="text/css" />
  <link rel="shortcut icon" href="/favicon.png" type="image/x-icon" />  
</head>
<body>

<% col = 1; lpc = 0 -%>

<div class='ce_label_pg'>
  <div class='ce_label_col'>

    <%  @labels.each do |l| -%>
    <% cllc = (l.print_label.blank? ? 0 : l.print_label.count("\n")) -%>

    <% for c in 0..l.num_to_print -%>
    <div class='<%= @css %>'><%= l.print_label -%></div>
    <% lpc = lpc + cllc -%>
      <% if lpc > @lines_per_col -%>
          </div>
        <div class='ce_label_col'>
        <% lpc = 0 -%>
        <% col = col + 1 -%>

        <% if col > @columns_max -%>
               </div>
             </div>
             
           <div  class='ce_label_pg'>
             <div  class='ce_label_col'>
               <% col = 1 -%>
         <% end -%>
      <% end -%>
      <% end -%>
      <div class='<%= @css %>'><br/><br/></div>
  <% end -%>
  </div>
</div>
</body>
</html>