<!-- requires an instance of ByTnName in @display_data -->
<table>
  <tr><th>OTU</th><th>OTU id</th><th>total</th><th>published</th><th>publish?</th></tr>
  <% @display_data.sections.each do |s| -%>
    <% if s.items.size > 1 -%>
      <tr class="failed">
        <td colspan=5>
          <%= "#{'&nbsp;' * rank_n(s.header.iczn_group) * 2 }" %> 
          <%= s.header.display_name -%>
        </td>
      </tr>
    <% end -%>

    <% s.items.each do |i| -%>
      <tr class="<%= 'passed' if i.contents.that_are_published.count > 0 -%>">
        <td><%= "#{'&nbsp;' * rank_n(s.header.iczn_group) * 2 }" %><%= '&nbsp;&nbsp;-&nbsp;' if s.items.size > 1 -%> <%= link_to(i.display_name, :action => :show_content, :controller => :otu, :id => i.id) -%></td>
        <td><%= i.id.to_s -%> </td>
        <td><%= i.contents.that_are_publishable.count -%> </td>
        <td><%= i.contents.that_are_published.count -%> </td>
        <td>
          <% if publish_link -%>   
           <%= link_to('publish all', :action => :publish_all, :otu_id => i.id) -%>
          <% else -%>
          <%= link_to('unpublish', {:action => 'unpublish', :controller => :public_content, :id => i.id}, :method => "post") -%>
          <% end -%>
        </td>
      </tr>
    <% end -%>
  <% end %>

  <% if @display_data.unplaced_items.size > 0 -%>
  <tr><td colspan="5"><h3> OTUs with content, but not linked to taxon names </h3></td></tr>
    <% @display_data.unplaced_items.each do |i| -%>
    <tr class="<%= 'passed' if i.contents.that_are_published.count > 0 -%>"> 
      <td><%= i.display_name -%></td>
       <td><%= i.id.to_s -%> </td>
       <td><%= i.contents.that_are_publishable.count -%> </td>
       <td><%= i.contents.that_are_published.count -%> </td>
       <td>
         <% if publish_link -%>   
           <%= link_to('publish all', :action => :publish_all, :controller => :content, :otu_id => i.id) -%>
         <% else -%>
           <%= link_to('unpublish', {:action => 'unpublish', :controller => :public_content, :id => i.id}, :method => "post") -%>
         <% end -%>
       </td>
    </tr> 
    <% end %>
  <% end %>
</table>
