    <%= "[#{p.parent.manual_id.to_s}] ".html_safe if p.parent.manual_id? -%> <%= link_to(truncate(p.couplet_text, :length => 55), :action => act, :id => p.parent_id) -%> <br/>
  <% end -%>
  <% i += 1 -%>
