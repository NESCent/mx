<%= error_messages_for 'taxon_name' %>

<!--[form:taxon_name]-->

<div class="header"> Required </div>

<div class="fr"><label for="taxon_name_name" class="lbl4">Name</label><span class="fld">
    <%= text_field 'taxon_name', 'name', 'title' => 'taxonomic name'  %>
  </span></div>

<div class="fr"><label for="taxon_name_iczn_group" class="lbl4">ICZN group</label>
  <span class="fld">
    <%= select("taxon_name", "iczn_group", TaxonName.iczn_groups, { :include_blank => true }) %></span>
</div>

<div class="fr"><label for="parent" class="lbl4">Parent</label>
  <span class="fld"><%= render :partial => "shared/picker", :locals => {:controller => 'taxon_name',
    :object => 'taxon_name', :method => 'parent_id', :tag_id => "parent_id_for_new_name", :display => @taxon_name.parent.andand.display_name(:type => :for_select_list)  } %>
  </span>
</div>

<div class="header"> Orthography  </div>

<div class="fr"><label for="taxon_name_agreement_name" class="lbl4">Gender agreement</label><span class="fld">
    <%= text_field 'taxon_name', 'agreement_name', 'title' => 'the orthography of the name with the correct gender given the current generic placement' -%><em> for species in new combination </em>
  </span></div>

<div class="fr"><label for="taxon_name_orignal_spelling" class="lbl4">Original spelling</label><span class="fld">
    <%= text_field 'taxon_name', 'original_spelling', 'title' => 'the orthography of the name as original printed'  %>
  </span></div>

<div class="header"> Authorship / Original publication </div>

<div class="fr"><label for="taxon_name_author" class="lbl4">Author</label><span class="fld">
    <%= text_field 'taxon_name', 'author', 'title' => 'taxonomic author' %>
  </span></div>

<div class="fr"><label for="taxon_name_year" class="lbl4">Year</label><span class="fld">
    <%= text_field 'taxon_name', 'year', 'title' => 'year published (made valid)', :size => 4  %>
  </span>
</div>

<div class="fr"><label for="taxon_name_ref_name" class="lbl4">Reference </label><span class="fld">
<%= render :partial => "shared/picker", :locals => {:controller => 'ref',
  :object => 'taxon_name', :method => 'ref_id', :tag_id => "taxon_name_ref_name", :size => 50, 
  :display => (@taxon_name.ref.display_name if @taxon_name.ref) } %>
  </span>
</div>

<div class="fr"><label for="taxon_name_page_validated_on" class="lbl4">Page "validated" on</label><span class="fld">
    <%= text_field 'taxon_name', 'page_validated_on', 'title' => 'page taxonomic name was validated on', :size => 6  %>
  </span></div>

<div class="fr"><label for="taxon_name_page_first_appearance" class="lbl4">Page first appearance</label><span class="fld">
    <%= text_field 'taxon_name', 'page_first_appearance', 'title' => 'page taxonomic name first appeared', :size => 6  %>
  </span></div>

<div class="header"> Original combination </div>

<div class="fr"><label for="orig_genus" class="lbl4">Original genus</label><span class="fld">
    <%= render :partial => "shared/picker", :locals => {:controller => 'taxon_name',
      :object => 'taxon_name', :method => 'orig_genus_id', :tag_id => "orig_genus", :name_group => 'genus',
      :display => @taxon_name.original_genus.andand.display_name(:type => :for_select_list) } %>
  </span></div>

<div class="fr"><label for="orig_subgenus" class="lbl4">Original subgenus </label><span class="fld">
    <%= render :partial => "shared/picker", :locals => {:controller => 'taxon_name',
      :object => 'taxon_name', :method => 'orig_subgenus_id', :tag_id => "orig_subgenus", :name_group => 'genus',
      :display => @taxon_name.original_subgenus.andand.display_name(:type => :for_select_list) } %>
  </span></div>

<div class="fr"><label for="orig_species" class="lbl4">Original species </label><span class="fld">
    <%= render :partial => "shared/picker", :locals => {:controller => 'taxon_name',
      :object => 'taxon_name', :method => 'orig_species_id', :tag_id => "orig_species", :name_group => 'species',
      :display => @taxon_name.original_species.andand.display_name(:type => :for_select_list) } %>
  </span></div>

<div class="header"> Status (if not presently valid) </div>

<div class="fr"><label for="taxon_name_taxon_status_id" class="lbl4">Status </label><span class="fld">
    <%= render(:partial =>"taxon_name_status/picker", :locals => {:c_name => 'taxon_name', :f_name => 'taxon_name_status_id'} ) %>
  </span>
</div>

<div class="fr"><label for="taxon_name_valid_name_id" class="lbl4">Valid name</label><span class="fld">
    <%= render :partial => "shared/picker", :locals => {:controller => "taxon_name",
      :object => 'taxon_name', :method => 'valid_name_id', :tag_id => "valid_name",
      :display => @taxon_name.valid_name.andand.display_name(:type => :for_select_list) } %>
  </span></div>

<div class="header"> Other </div>

<div class="fr"><label for="nominotypical_subgenus" class="lbl4">Parent is nominotypical subgenus?</label><span class="fld">
    <%= check_box('taxon_name', 'nominotypical_subgenus', 'title' => 'parent is a subgenus that is same name as the genus') %>
  </span>
</div>

<div class="fr"><label for="taxon_name_notes" class="lbl4">Notes</label><span class="fld">
    <%= text_area 'taxon_name', 'notes', 'title' => 'general notes about this taxonomic name',  :rows => 3, :cols => 60 %>
  </span>
</div>

<div class="box4 failed" style="font-size: smaller; padding: .4em; clear:both; margin: 1em;">
  <h3> Type data </h3>
  <p> The old type related fields for taxon names have now been fully deprecated. Contact us if you have questions. To add type data add type specimen records.</p>
</div>
<!--[eoform:taxon_name]-->

