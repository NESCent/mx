<div id="inner_wrapper">
  <div id="inner_header" style="text-align: center;"> 
    <%= error_messages_for 'chr_state' %>
    <h3 style="display: inline"><%=h @chr.name %> <span class='otu_id'>(<%=h @chr.id %>)</span></h3>
  </div>

  <div id="inner_container"  <%= 'style="padding-right: 0;"' if @no_right_col %>>

    <%# CENTER COLUMN (must be rendered here for CSS to work!) %> 
    <div id="inner_center" class="column"> 
      <% @part = 'center' %>
      <% for s in @show %>      <%# we might render multiple parts in one column %> 
      <%= render :partial =>(s) %>
      <% end %>
    </div>

    <%# LEFT COLUMN %>
    <div id="inner_left" class="column">
      <% @part = 'left' %>
      <%= show_navigator %>
      <% for s in @show %>
        <%= render :partial =>(s) %>
      <% end %>
    </div>

    <%# RIGHT COLUMN %>

    <div id="inner_right" class="column" <%= 'style="width: 0; margin-right: 0;"' if @no_right_col %> >
      <% @part = 'right' %>
      <%# we might render multiple parts in one column %> 
      <% for s in @show %>
        <%= render :partial =>(s) %>
      <% end %>
    </div>

  </div> <%# end inner_container %> 

  <%# FOOTER (this will ultimately change) %>
  <div id="inner_footer"></div>
</div>
